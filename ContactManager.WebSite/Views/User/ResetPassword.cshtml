@model ResetPasswordVM

@{
    ViewData["Title"] = "Create";
}

<h1>New Password</h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Back", "Manage", new { }, new { @class = "btn btn-secondary" })
</div>

<div class="mt-2">
    <p>Congratulations! The password of <b>@Model.UserName</b> was reset.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="NewPassword">New Password</label>
            <div class="input-group">
                <input asp-for="NewPassword" type="text" class="form-control" value="@Model.NewPassword">
                <button type="button" class="btn btn-outline-primary" onclick="copyToClipboard()">
                    <i class="fa fa-copy"></i> Copy
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function copyToClipboard() {
      const elementToCopy = document.getElementById("toCopy");
      elementToCopy.select();
      elementToCopy.setSelectionRange(0, 99999);
      document.execCommand("copy");
    }
</script>
}