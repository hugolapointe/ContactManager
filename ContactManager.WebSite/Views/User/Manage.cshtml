@model IEnumerable<UserDetailsVM>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Create", "Create",
    new { }, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <form asp-action="ResetPassword" asp-route-id="@item.Id" class="d-inline-block">
                        <input type="submit" class="btn btn-secondary" value="Reset Password" />
                    </form>
                    <form id="delete-form-@item.Id" asp-action="Remove" asp-route-id="@item.Id" class="d-inline-block">
                        <button type="button" class="btn btn-danger delete-button" data-item-id="@item.Id" data-username="@item.UserName">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script>
    $(function() {
        $('.delete-button').click(function() {
            const itemId = $(this).data('item-id');
            const username = $(this).data('username');

            const message = `Are you sure you want to delete the user ${username}?`;

            if(confirm(message)) {
            $(`#delete-form-${itemId}`).submit();
            }
        });
    });
</script>
}