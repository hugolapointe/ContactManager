@model IEnumerable<AddressDetailsVM>

@{
    ViewData["Title"] = "Manage addresses";
}

<h1>Addresses of <u>@ViewBag.ContactFullName</u></h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Back", "Manage", "Contact", 
        new {}, new { @class = "btn btn-secondary" })
    @Html.ActionLink("Create", "Create", 
        new { contactId = @ViewBag.ContactId }, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", 
                    new { id = item.Id }, new { @class = "btn btn-primary" })
                    <form asp-action="Remove" asp-route-id="@item.Id" class="d-inline-block">
                        <button type="button" class="btn btn-danger delete-button">
                            Remove
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
<script>
    $(function() {
        $('.delete-button').click(function() {
            const name = $(this).data('name') || "this item";

            const message = `Are you sure you want to delete ${name}?`;

            if(confirm(message)) {
                $(this).parent("form").submit();
            }
        });
    });
</script>
}